# Environment Configuration
# Copy this to .env and update with your actual API keys

# Database Configuration
# For Docker: postgresql://postgres:postgres@postgres:5432/ai_business_assistant
# For Local: postgresql://username:password@localhost:5432/ai_business_assistant
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/ai_business_assistant

# Redis Configuration
# For Docker: redis://redis:6379
# For Local: redis://localhost:6379
REDIS_URL=redis://redis:6379

# API Keys - GET THESE FROM YOUR SERVICE PROVIDERS
GLADIA_API_KEY=your_gladia_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
BRIGHT_DATA_API_KEY=your_bright_data_api_key_here
TIGERDATA_API_KEY=your_tigerdata_api_key_here

# Application Settings
DEBUG=True
SECRET_KEY=your-secret-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Vector Search Settings
VECTOR_DIMENSION=384
SIMILARITY_THRESHOLD=0.7
